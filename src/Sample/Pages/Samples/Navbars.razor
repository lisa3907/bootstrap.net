@page "/samples/navbars"
@*@addTagHelper *, BootStrap.Net*@

<Navbar IsExpand="true" IsDark="false" Color="Color.Light">
    <NavbarBrand Href="#" lg="1" xs="3" sm="2" md="2"><Image Src="logo.png" alt="logo" /></NavbarBrand>
    <NavbarToggler @onclick="onclick" />
    <Collapse isOpen="@IsOpen" IsNavbar="true">
        <BlazorNav IsList="true" Class="mr-auto" IsNavbar="true">
            <NavItem IsDropdown="true" lg="3" xs="9" sm="5" md="3">
                <DropdownToggle @onclick="onclick2" IsOpen="@IsOpen2" Color="Color.Light">Version</DropdownToggle>
                <DropdownMenu IsOpen="@IsOpen2">
                    <DropdownItem>Borderlands 1</DropdownItem>
                    <DropdownItem>Borderlands 2</DropdownItem>
                    <DropdownItem>Borderlands 3</DropdownItem>
                </DropdownMenu>
            </NavItem>
            <BlazorForm IsInline="true" lg="4" md="3" Class="hidden-xs hidden-sm">
                <BlazorInput InputType="InputType.Search" PlaceHolder="Search" />
                <BlazorButton IsOutline="true" Color="Color.Success" ButtonType="ButtonType.Submit">Search</BlazorButton>
            </BlazorForm>

            <NavItem>
                <i class="fa fa-enevlope"></i>
            </NavItem>
            <BlazorForm IsInline="true" lg="4" xs="12" sm="5" md="4">
                <BlazorButton Color="Color.Primary">Start New Topic</BlazorButton>
            </BlazorForm>
            <NavItem IsDropdown="true" Class="mr-auto">
                <DropdownToggle @onclick="onclick3" IsOpen="@IsOpen3" Color="Color.Light"><Image Src="avatar.png" alt="logo" /></DropdownToggle>
                <DropdownMenu IsOpen="@IsOpen3">
                    <DropdownItem>My Profile</DropdownItem>
                    <DropdownItem>Inbox</DropdownItem>
                    <DropdownItem>Create Account</DropdownItem>
                </DropdownMenu>
            </NavItem>
        </BlazorNav>
    </Collapse>
</Navbar>

@functions {
    bool IsOpen = true;
    bool IsOpen2 = false;
    bool IsOpen3 = false;

    void onclick(MouseEventArgs e)
    {
        IsOpen = !IsOpen;
        StateHasChanged();
    }

    void onclick2(MouseEventArgs e)
    {
        IsOpen2 = !IsOpen2;
        StateHasChanged();
    }

    void onclick3(MouseEventArgs e)
    {
        IsOpen3 = !IsOpen3;
        StateHasChanged();
    }
}