@inherits BootStrapComponentBase

<DynamicElement TagName="figure" class="@classname" style="@Style" Attributes="@UnknownParameters">
    @ChildContent
</DynamicElement>

@functions {
    string classname
    {
        get
        {
            return $"figure {Class}";
        }
    }
    [Parameter] public string Class { get; set; }
    [Parameter] public string Style { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }
}