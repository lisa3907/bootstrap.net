@inherits BootStrapComponentBase

<DynamicElement Attributes="@UnknownParameters" TagName="li" class="@classname" aria-current="@aria">
    @ChildContent
</DynamicElement>

@functions {
    private string classname
    {
        get
        {
            var active = IsActive ? "breadcrumb-item active" : "breadcrumb-item";
            return $"{active} {Class}";
        }
    }
    private string aria
    {
        get
        {
            return IsActive ? "page" : null;
        }
    }
    [Parameter] public bool IsActive { get; set; }
    [Parameter] public string Class { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }
}