@inherits BootStrapComponentBase
@using BootStrap.Net.Util

<DynamicElement Attributes="@UnknownParameters" TagName="td" class="@classname">
    @ChildContent
</DynamicElement>

@functions {
    string classname
    {
        get
        {
            var color = Color != Color.None ? $"table-{Color.ToDescriptionString()}" : null;
            return $"{color} {Class}";
        }
    }
    [Parameter] public Color Color { get; set; } = Color.None;
    [Parameter] public string Class { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }
}