@inherits BootStrapComponentBase

<DynamicElement Attributes="@UnknownParameters" TagName="div" class="@classname">
    @ChildContent
</DynamicElement>

@functions {
    string classname
    {
        get
        {
            var check = IsCheck ? "form-check" : "form-group";
            var row = IsRow ? "row" : null;
            return $"{check} {row} {Class}";
        }
    }
    [Parameter] public bool IsRow { get; set; }
    [Parameter] public bool IsCheck { get; set; }
    [Parameter] public string Class { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }
}