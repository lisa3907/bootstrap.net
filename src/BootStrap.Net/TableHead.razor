@inherits BootStrapComponentBase

<DynamicElement Attributes="@UnknownParameters" TagName="thead" class="@classname">
    @ChildContent
</DynamicElement>

@functions {
    string classname
    {
        get
        {
            var light = TableHeadType == TableHeadType.Light ? "thead-light" : null;
            var dark = TableHeadType == TableHeadType.Dark ? "thead-dark" : null;
            return $"{light} {dark} {Class}";
        }
    }
    [Parameter] public TableHeadType TableHeadType { get; set; } = TableHeadType.None;
    [Parameter] public string Class { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }
}