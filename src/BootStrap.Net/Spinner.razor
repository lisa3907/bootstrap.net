@inherits BootStrap.Net.BootStrapComponentBase
@using BootStrap.Net
@using BootStrap.Net.Util
@using Microsoft.AspNetCore.Components

<DynamicElement TagName="@Tag" Attributes="@UnknownParameters" class="@classname" role="status" style="@Style">
    <span class="sr-only">Loading...</span>
</DynamicElement>

@functions {
    private string classname
    {
        get
        {
            var color = Color != Color.None ? $"text-{Color.ToDescriptionString()}" : null;
            var spinner = "spinner-" + (IsGrow == false ? "boarder" : "grow");
            return $"{spinner} {color} {Class}";
        }
    }

    private string Tag { get; set; } = "div";

    [Parameter] public bool IsGrow { get; set; }
    [Parameter] public Color Color { get; set; } = Color.Primary;
    [Parameter] public string Class { get; set; }
    [Parameter] public string Style { get; set; }
}