@inherits BootStrapComponentBase

@if (IsValid || IsInvalid)
{
<DynamicElement Attributes="@UnknownParameters" TagName="div" class="@classname">
    @ChildContent
</DynamicElement>
}

@functions {
    string classname
    {
        get
        {
            var cls = IsTooltip ? "tooltip" : "feedback";
            var isvalid = IsValid ? $"valid-{cls}" : null;
            var isinvalid = IsInvalid ? $"invalid-{cls}" : null;
            return $"{isvalid} {isinvalid} {Class}";
        }
    }
    [Parameter] public bool IsValid { get; set; }
    [Parameter] public bool IsInvalid { get; set; }
    [Parameter] public bool IsTooltip { get; set; }
    [Parameter] public string Class { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }
}