@inherits BootStrapComponentBase
@using BootStrap.Net.Util

<DynamicElement Attributes="@UnknownParameters" TagName="div" class="@classname">
    @ChildContent
</DynamicElement>

@functions {
    string classname
    {
        get
        {
            var toggle = IsToggle ? "btn-group-toggle" : null;
            var direction = DropdownDirection != DropdownDirection.Down ? DropdownDirection.ToDescriptionString() : null;
            var groupdir = IsVertical ? "btn-group-vertical" : "btn-group";
            var baseclass = IsToolbar ? "btn-toolbar" : groupdir;
            var size = Size != Size.None ? $"btn-group-{Size.ToDescriptionString()}" : null;
            var open = IsOpen ? "show" : null;
            return $"{baseclass} {size} {toggle} {direction} {open} {Class}";
        }
    }
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public bool IsToggle { get; set; }
    [Parameter] public bool IsToolbar { get; set; }
    [Parameter] public bool IsVertical { get; set; }
    [Parameter] public DropdownDirection DropdownDirection { get; set; } = DropdownDirection.Down;
    [Parameter] public Size Size { get; set; } = Size.None;
    [Parameter] public string Class { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }
}