@namespace BootStrap.Net
@inherits BootStrapComponentBase

<DynamicElement Attributes="@UnknownParameters" TagName="div" class="@classname">
    @ChildContent
</DynamicElement>

@functions {
    string classname
    {
        get
        {
            var open = IsOpen ? "show" : null;
            var baseclass = IsGroup ? "btn-group" : "dropdown";
            var direction = DropdownDirection != DropdownDirection.Down ? DropdownDirection.ToDescriptionString() : null;
            return $"{baseclass} {direction} {open} {Class}";
        }
    }

    [Parameter] public DropdownDirection DropdownDirection { get; set; } = DropdownDirection.Down;
    [Parameter]
    public bool IsOpen
    {
        get; set;
    }
    [Parameter]
    public bool IsGroup
    {
        get; set;
    }
    [Parameter]
    public string Class
    {
        get; set;
    }
    [Parameter]
    public RenderFragment ChildContent
    {
        get; set;
    }
}