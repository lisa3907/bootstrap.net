@inherits BootStrapComponentBase

<DynamicElement Attributes="@UnknownParameters" TagName="div" class="@classname">
    @ChildContent
</DynamicElement>

@functions {
    private string classname
    {
        get
        {
            var open = IsOpen ? "show" : null;
            var navbar = IsNavbar ? "navbar-collapse" : null;
            return $"collapse {navbar} {open} {Class}";
        }
    }

    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public bool IsNavbar { get; set; }
    [Parameter] public string Class { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }
}